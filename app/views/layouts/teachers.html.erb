<% @title="Docente" %>
<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title><%= @title %></title>
        <%= csrf_meta_tags %>
        <%= stylesheet_link_tag 'inicio', :media => "all" %>
        <%= stylesheet_link_tag 'students/estudiante', :media => "all" %>
        <%= stylesheet_link_tag 'font-awesome.min', :media => "all" %>
        <%= stylesheet_link_tag 'teachers/login', :media => "all" %>
        <%= stylesheet_link_tag 'jquery-ui.min.css', :media => "all" %>
        <%= stylesheet_link_tag 'students/nuevo-estudiante', :media => "all" %>
        <%= stylesheet_link_tag 'teachers/panel', :media => "all" %>
        <%= stylesheet_link_tag 'academics/groups', :media => "all" %>
        <%= stylesheet_link_tag 'academics/students/reg-acad', :media => "all" %>
        <%= stylesheet_link_tag 'academics/students/historial', :media => "all" %>
        <%= stylesheet_link_tag 'academics/students/schedules', :media => "all" %>
        <%= stylesheet_link_tag 'academics/subjects/new', :media => "all" %>
        <%= stylesheet_link_tag 'registers', :media => "all" %>
        <%= stylesheet_link_tag 'registers/notes', :media => "all" %>
        <%= stylesheet_link_tag 'registers/edit-notes', :media => "all" %>
        <%= stylesheet_link_tag 'academics', :media => "all" %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <script>
            $(document).ready(function ()
            {
                $("#wb_MenuPrincipal ul li a").click(function (event)
                {
                    $("#wb_MenuPrincipal input").prop("checked", false);
                });
            });
        </script>
    </head>
    <body>
        
        <div id="wb_HeaderEstudiante">
            <div id="HeaderEstudiante">
                <div class="row">
                    <div class="col-1">
                        <div id="wb_LogoEst">
                            <%= link_to root_path do%>
                            <%= image_tag("logo-ucatolica.svg", :alt => "", :id =>"LogoEst", :class => "imagen")%>
                            <%end%>
                        </div>
                    </div>
                    <div class="col-2">
                        <%= render "layouts/menu", menu: "estudiante"%>
                    </div>
                </div>
            </div>
        </div>
        <div id="LayerUsuario">
            <div id="LayerUsuario_Container">
                <div id="wb_TextBienvenidaEst" class="TextoHeader">
                    <span style="color:#EEAD17;">
                        <strong>
                            <% if teacher_signed_in?%>
                                <%= 
                                    "Bienvenido " + current_teacher.nombres + " " + current_teacher.apellidos + "!"
                                %>
                            <% else %>
                                Bienvenido docente
                            <% end %>
                        </strong>
                    </span>
                </div>
                <% if teacher_signed_in? %>
                <div id="wb_iconNotificacionesEst">
                    <svg id="iconNotificacionesEst" class="imagen" height="100%" width="100%" viewBox="0 0 32 32" version="1.1" xmlns="http://www.w3.org/2000/svg">
                        <g transform="scale(0.0179)">
                            <path transform="rotate(180) scale(-1,1) translate(0,-1536)" d="M912 -160q0 16 -16 16q-59 0 -101.5 42.5t-42.5 101.5q0 16 -16 16t-16 -16q0 -73 51.5 -124.5t124.5 -51.5q16 0 16 16zM1728 128q0 -52 -38 -90t-90 -38h-448q0 -106 -75 -181t-181 -75t-181 75t-75 181h-448q-52 0 -90 38t-38 90q50 42 91 88t85 119.5t74.5 158.5t50 206t19.5 260q0 152 117 282.5t307 158.5q-8 19 -8 39q0 40 28 68t68 28t68 -28t28 -68q0 -20 -8 -39q190 -28 307 -158.5t117 -282.5q0 -139 19.5 -260t50 -206t74.5 -158.5t85 -119.5t91 -88z"/>
                        </g>
                    </svg>
                </div>
                <div id="wb_iconCerrarSesionEst">
                    <%= link_to destroy_teacher_session_path, :method => 'delete' do %>
                    <svg id="iconCerrarSesionEst" class="imagen" height="100%" width="100%" viewBox="0 0 27 27" version="1.1" xmlns="http://www.w3.org/2000/svg">
                        <g transform="scale(0.0151)">
                            <path transform="rotate(180) scale(-1,1) translate(0,-1536)" d="M1536 640q0 -156 -61 -298t-164 -245t-245 -164t-298 -61t-298 61t-245 164t-164 245t-61 298q0 182 80.5 343t226.5 270q43 32 95.5 25t83.5 -50q32 -42 24.5 -94.5t-49.5 -84.5q-98 -74 -151.5 -181t-53.5 -228q0 -104 40.5 -198.5t109.5 -163.5t163.5 -109.5t198.5 -40.5t198.5 40.5t163.5 109.5t109.5 163.5t40.5 198.5q0 121 -53.5 228t-151.5 181q-42 32 -49.5 84.5t24.5 94.5q31 43 84 50t95 -25q146 -109 226.5 -270t80.5 -343zM896 1408v-640q0 -52 -38 -90t-90 -38t-90 38t-38 90v640q0 52 38 90t90 38t90 -38t38 -90z"/>
                        </g>
                    </svg>
                    <% end %>
                </div>
                <% end %>
            </div>
        </div>

        <%= yield %>

        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= render "layouts/footer"%>
    </body>
</html>