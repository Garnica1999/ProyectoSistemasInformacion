<div id="wb_LayoutGridNotaAddContainer">
    <div id="LayoutGridNotaAddContainer">
        <div class="row">
            <div class="col-1">
                <div id="wb_LayoutContentNotaAdd">
                    <div id="LayoutContentNotaAdd">
                        <div class="row">
                            <div class="col-1">
                                <div id="wb_TextAddNotasTitle">
                                    <span style="color:#808080;"><strong><%= operacion + " una nota"%></strong></span>
                                </div>
                                <hr id="LineSeparatorNotasAdd1">

                                    <%= form_for @note, url: new_registers_student_note_path, method: :post do |f| %>

                                    <% if editar %>
                                        
                                        <div id="wb_TextInfoNotas">
                                            <span style="color:#696969;font-family:'Segoe UI';font-size:16px;">INFORMACION NOTAS...â€¦...</span>
                                        </div>
                                    <% end %>
                                    <%= f.select :group_id, Group.toArray,{ prompt: "Selecciona el grupo"}, id: "ComboboxGrupoNota" %>

                                    <hr id="LineSeparatorNotasAdd3">

                                    <%= f.select :subject_id, Subject.obtenerMaterias,{ prompt: "Selecciona la materia"}, id: "ComboboxMateriaNota" %>

                                    <hr id="LineSeparatorNotasAdd4">

                                    <%= f.text_field :nota, placeholder: "Nota (Decimal)", class: "EditBox", value: "", type: "number", id: "EditboxNotaNumNota", min:'0', step: '0.01'%>

                                    <div id="wb_ButtonRegistrarNota", style="padding-top: 15px;">
                                        <%= f.submit "Registrar", id: "ButtonRegistrarNota", class: "boton", style: "color: #FFFFFF;"%> 
                                    </div>
                                    <hr id="LineSeparatorNotasAdd6">
                                    
                                <% end %>
                                <% if editar %>
                                    <%= form_tag(destroy_note_student_registers_path(:note_id)) do%>
                                        <div id="wb_ButtonEliminarNota", style="padding-top: 15px;">
                                            <%= submit_tag "Eliminar", id: "ButtonEliminarNota", class: "boton", style: "color: #FFFFFF;"%> 
                                        </div>
                                    <% end %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>